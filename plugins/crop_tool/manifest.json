{
    "id": "crop_tool",
    "name": "Crop Tool",
    "version": "1.0.0",
    "description": "Crop images on the canvas. Select an image, draw a crop region, and apply.",
    "author": "CanvasForge",
    "license": "MIT",
    "entry_point": "plugin.py",
    "icon": "icon.png",
    "min_canvasforge_version": "1.3.0",
    "permissions": [
        "scene.read",
        "scene.write",
        "toolbar.register"
    ],
    "pip_dependencies": [],
    "toolbar_items": [
        {
            "text": "Crop",
            "callback": "activate_crop_mode",
            "icon": "icon.png",
            "shortcut": "C"
        }
    ],
    "menu_items": [
        {
            "menu": "Edit",
            "text": "Crop Selected Image",
            "callback": "crop_selected",
            "shortcut": "Shift+C"
        }
    ],
    "hooks": {
        "on_load": "on_load",
        "on_unload": "on_unload"
    }
}
